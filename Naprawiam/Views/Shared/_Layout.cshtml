<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - FixIT- Search solutions</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("FixIt", "Index", "Fix", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Utwórz", "Create", "Fix")</li>
                    }
                    <li>@Html.ActionLink("Lista", "list", "Fix")</li>
                        @if (User.Identity.IsAuthenticated)
                        {
                    <li>@Html.ActionLink("Twoje instrukcje", "ListOf", "Fix", routeValues: new
                   {
                       Id = User.Identity.Name + "/"
                   }, htmlAttributes: null
        )</li>
                    }
                    <li>@Html.ActionLink("Kontakt", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <img id="image" src="/Images/Background.jpg" height="710px" width="100%" />
    <img id="logo" src="/Images/logo.png" height="710px" width="100%" onclick="document.location.href='/'"/>
    <div  id="content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Made by Dominik Bulandra</p>
        </footer>
    </div>
    <script>
	var ypos,xpos,image,image2,logo,docheight;
	function parallex(){
		ypos = window.pageYOffset;

		image = document.getElementById('image');
		image2 = document.getElementById('imagedol');
		logo = document.getElementById('logo');
		if (ypos>=0) {
			image.style.top = ypos * .4 +'px';
		};

		logo.style.top = ypos * .9 +'px';
		image2.style.top =ypos * 0.80  +120 + 'px';








	}
	window.addEventListener('scroll',parallex);


    </script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
